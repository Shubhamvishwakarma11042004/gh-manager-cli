{
  "name": "gh-manager-cli",
  "version": "0.1.0",
  "private": false,
  "description": "Interactive CLI to manage your GitHub repos (personal) with Ink",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "gh-manager": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:binaries": "npm run build && pkg dist/index.js --targets node20-linux-x64,node20-macos-x64,node20-windows-x64 --out-path ./binaries",
    "dev": "tsup --watch",
    "start": "node dist/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@octokit/graphql": "^9.0.1",
    "chalk": "^5.6.0",
    "dotenv": "^17.2.1",
    "env-paths": "^3.0.0",
    "ink": "^6.2.3",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "pkg": "^5.8.1",
    "semantic-release": "^24.2.7",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wiiiimm/gh-manager-cli.git"
  },
  "bugs": {
    "url": "https://github.com/wiiiimm/gh-manager-cli/issues"
  },
  "homepage": "https://github.com/wiiiimm/gh-manager-cli#readme",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "binaries/gh-manager-linux-x64/gh-manager-linux-x64",
              "name": "gh-manager-linux-x64",
              "label": "Linux x64 Binary"
            },
            {
              "path": "binaries/gh-manager-macos-x64/gh-manager-macos-x64",
              "name": "gh-manager-macos-x64",
              "label": "macOS x64 Binary"
            },
            {
              "path": "binaries/gh-manager-windows-x64/gh-manager-windows-x64.exe",
              "name": "gh-manager-windows-x64.exe",
              "label": "Windows x64 Binary"
            }
          ]
        }
      ]
    ]
  }
}
